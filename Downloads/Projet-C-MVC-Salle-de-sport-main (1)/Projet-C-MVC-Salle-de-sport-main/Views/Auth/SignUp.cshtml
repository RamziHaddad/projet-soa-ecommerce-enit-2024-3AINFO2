@model ProjetC_MVCSalleSport.Models.Membre

@{
    ViewBag.Title = "Inscription";
}



<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden">
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }
    </style>

    <div class="container px-4 py-5 px-md-5  text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    L'activité physique renforce <br />
                    <span style="color: hsl(60, 100%, 75%)">l'énergie positive !</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Bienvenue chez FitLAND, où le fitness rencontre l'innovation !
                    Plongez dans un monde d'entraînements transformateurs adaptés
                    à vos objectifs et guidés par des entraîneurs experts.


                    Rejoignez-nous dès aujourd'hui et redéfinissez ce qui est possible avec FitLAND.
                </p>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">

                    Nos installations de pointe offrent une gamme dynamique
                    d'équipements et de cours conçus pour vous défier et vous inspirer
                    dans votre parcours fitness.

                    Rejoignez-nous dès aujourd'hui et redéfinissez ce qui est possible avec FitLAND.
                </p>

            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div class="form-check d-flex justify-content-center mb-1">
                    <h2 >INSCRIPTION </h2>
                </div>
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
            <div class="card bg-glass">
                
                    <div class="card-body px-4 py-5 px-md-5">
                        <form style="color: black;">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        @Html.LabelFor(model => model.nom, new { @class = "form-label text-black" })
                                        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control bg-transparent", style = "background-color: rgba(0, 102, 204, 0.5); border-color: black;" } })
                                        @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div data-mdb-input-init class="form-outline">
                                        @Html.LabelFor(model => model.prenom, new { @class = "form-label text-black" })
                                        @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control bg-transparent", style = "background-color: rgba(0, 102, 204, 0.5); border-color: black;" } })
                                        @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                @Html.LabelFor(model => model.mail, new { @class = "form-label text-black" })
                                @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control bg-transparent", style = "background-color: rgba(0, 102, 204, 0.5); border-color: black;" } })
                                @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                            </div>

                            <!-- Password input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                @Html.LabelFor(model => model.motDePasse, new { @class = "form-label text-black" })
                                @Html.EditorFor(model => model.motDePasse, new { htmlAttributes = new { @class = "form-control bg-transparent", style = "background-color: rgba(0, 102, 204, 0.5); border-color: black;" } })
                                @Html.ValidationMessageFor(model => model.motDePasse, "", new { @class = "text-danger" })
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-center mb-4">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                                <label class="form-check-label text-black" for="form2Example33">
                                    Subscribe to our newsletter
                                </label>
                            </div>

                            <!-- Submit button -->
                            <button type="button" onclick="window.location.href = '/home';" class="btn btn-primary btn-block mb-4">
                                Sign up
                            </button>

                        </form>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>